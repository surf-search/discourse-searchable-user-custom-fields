<a  {{action "selectCategory"}} class="chord-directory-item chord-directory-category {{if category.active 'selected'}}">
  {{#unless category.active}}
    {{d-icon "plus"}}
  {{/unless}}
  {{#if category.active}}
    {{d-icon "times-circle"}}
  {{/if}}
  <span class="chord-directory-item-id category-id">{{categoryName}}</span>
  <span class="chord-directory-item-count category-count">{{category.count}}</span>
</a>
