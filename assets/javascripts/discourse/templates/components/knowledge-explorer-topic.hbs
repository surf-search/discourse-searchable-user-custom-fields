{{d-button
  label="chord_directory.topic.back"
  class="chord-directory-nav-link return"
  action=return
}}

<div class="topic-content">
  <h1>{{topic.title}}</h1>
  {{mount-widget
    widget="post"
    model=model
    args=post
  }}

  {{share-popup topic=model.topic}}
</div>

<a class="chord-directory-nav-link more" href="/t/{{topic.id}}">
  {{d-icon "far-comment"}} {{i18n 'chord_directory.topic.navigate_to_topic'}}
</a>

{{plugin-outlet name="after-chord-directory-topic"}}
