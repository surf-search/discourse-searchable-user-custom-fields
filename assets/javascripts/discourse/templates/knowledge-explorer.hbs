<div class="chord-directory">
  {{plugin-outlet name="before-chord-directory-search"}}
  {{chord-directory-search
    searchTerm=(readonly searchTerm)
    onSearch=(action "performSearch")
  }}
  {{#conditional-loading-spinner condition=isLoading}}
    {{#if emptyTopics}}
      <span class="no-topics-found">{{i18n 'chord_directory.no_topics'}}</span>
    {{else}}
    <div class="chord-directory-browse">
      {{#if site.mobileView}}
        {{#unless selectedTopic}}
          {{d-button class="chord-directory-expander" icon=(if expandedFilters "angle-up" "angle-down") action=(action "toggleFilters") label="chord_directory.filter_button"}}
        {{/unless}}
      {{/if}}
      <div class="chord-directory-filters">
        {{#if expandedFilters}}
            {{#if canFilterSolved}}
              <div class="chord-directory-items chord-directory-solved">
                <label class="checkbox-label chord-directory-item">
                  {{input
                    type="checkbox"
                    checked=(readonly filterSolved)
                    change=(action "onChangeFilterSolved" value="target.checked")
                  }}
                  {{i18n "chord_directory.filter_solved"}} 
                </label>
              </div>

            {{/if}}
            {{#if categories}}
              <div class="chord-directory-items chord-directory-categories">
                <h3>{{i18n 'chord_directory.categories'}}</h3>
                {{#each categories as |category|}}
                  {{chord-directory-category
                    category=category
                    selectCategory=(action "updateSelectedCategories"
                    tagName="")
                  }}
                {{/each}}
              </div>
            {{/if}}
            {{#if tags}}
              <div class="chord-directory-items chord-directory-tags">
                <h3>{{i18n 'chord_directory.tags'}}</h3>
                {{#each tags as |tag|}}
                  {{chord-directory-tag
                    tag=tag
                    selectTag=(action "updateSelectedTags")
                  }}
                {{/each}}
              </div>
            {{/if}}
        {{/if}}
      </div>
      {{#if selectedTopic}}
        {{#conditional-loading-spinner condition=isTopicLoading}}
          {{chord-directory-topic topic=topic return=(action "returnToList")}}
        {{/conditional-loading-spinner}}
      {{else}}
        <div class="chord-directory-results">
          {{#if isSearchingOrFiltered}}
            {{#if emptyResults}}
              <div class="result-count no-result">
                {{i18n 'search.no_results'}}
              </div>
            {{else}}
              <div class="result-count">
                {{i18n 'chord_directory.search.results'
                  count=searchCount
                }}
              </div>
            {{/if}}
          {{/if}}
          {{#unless emptyResults}}
            {{chord-directory-topic-list
              topics=topics
              ascending=ascending
              order=orderColumn
              sortBy=(action "sortBy")
              selectTopic=(action "setSelectedTopic")
              loadMore=(action "loadMore")
              loading=isLoadingMore
            }}
          {{/unless}}
        </div>
      {{/if}}
    </div>
    {{/if}}
{{/conditional-loading-spinner}}
</div>
